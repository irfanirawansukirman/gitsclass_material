<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/lin_main_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.iriras.gitsclassmaterial.util.SquareImageView
                android:id="@+id/img_main_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txt_main_title_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80000000"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="Sambal Matah" />
        </FrameLayout>

        <TextView
            android:id="@+id/txt_main_desc_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="6dp"
            android:maxLines="3"
            android:padding="16dp"
            android:textColor="@color/seconday_text"
            android:textSize="14sp"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. At multis se probavit. Miserum hominem! Si dolor summum malum est, dici aliter non potest." />

        <TextView
            android:id="@+id/txt_main_cheff_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/seconday_text"
            android:textSize="14sp"
            tools:text="by Cheff Marinka - Aston Hotel" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_clock_outline"
                android:tint="@color/seconday_text" />

            <TextView
                android:id="@+id/txt_main_time_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:textColor="@color/seconday_text"
                android:textSize="11sp"
                tools:text="10 Minute" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_heart_outline"
                android:tint="@color/pink" />

            <TextView
                android:id="@+id/txt_main_heart_count_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/seconday_text"
                android:textSize="11sp"
                tools:text="110" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_comment_outline"
                android:tint="@color/green_toska" />

            <TextView
                android:id="@+id/txt_main_comment_count_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/seconday_text"
                android:textSize="11sp"
                tools:text="110" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>